#!/bin/bash
#=============================================================================
# Universal Bookmarks - Pre-commit Hook
# 
# Automatically runs relevant tests before committing to catch issues early.
# This hook runs only tests related to changed shell script files.
#=============================================================================

set -euo pipefail

# Colors for output
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[0;33m'
readonly BLUE='\033[0;34m'
readonly CYAN='\033[0;36m'
readonly NC='\033[0m' # No Color

# Get the repository root directory
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

# Check if run_tests.sh exists
if [ ! -f "$REPO_ROOT/run_tests.sh" ]; then
    echo -e "${YELLOW}Warning: run_tests.sh not found. Skipping tests.${NC}" >&2
    exit 0
fi

# Get list of changed shell script files
CHANGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.sh$" || true)

# If no shell scripts were changed, skip tests
if [ -z "$CHANGED_FILES" ]; then
    echo -e "${CYAN}No shell scripts changed. Skipping tests.${NC}"
    exit 0
fi

echo -e "${BLUE}╔════════════════════════════════════════════════╗${NC}"
echo -e "${BLUE}║    Pre-commit Hook: Running Tests             ║${NC}"
echo -e "${BLUE}╚════════════════════════════════════════════════╝${NC}"
echo ""
echo -e "${CYAN}Changed shell scripts:${NC}"
echo "$CHANGED_FILES" | sed 's/^/  - /'
echo ""

# Run tests in hook mode (fail-fast)
echo -e "${CYAN}Running tests in fail-fast mode...${NC}"
echo ""

# Export FZF_PATH if it exists in common locations
if [ -d "/tmp/fzf/bin" ]; then
    export PATH="/tmp/fzf/bin:$PATH"
fi

# Run tests with fail-fast flag
if "$REPO_ROOT/run_tests.sh" --hook; then
    echo ""
    echo -e "${GREEN}✓ All tests passed! Proceeding with commit.${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}✗ Tests failed! Please fix the issues before committing.${NC}" >&2
    echo -e "${YELLOW}  Hint: Run './run_tests.sh -v' for detailed output${NC}" >&2
    echo -e "${YELLOW}  Or use 'git commit --no-verify' to skip this check${NC}" >&2
    exit 1
fi
